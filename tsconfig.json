{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "es2015",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react-native",
        "lib": ["es6"],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "paths": {
            "store": ["./src/store"],
            "store/*": ["./src/store/*"],
            "managers": ["./src/managers"],
            "managers/*": ["./src/managers/*"],
            "screens": ["./src/screens"],
            "screens/*": ["./src/screens/*"],
            "entities": ["./src/entities"],
            "entities/*": ["./src/entities/*"]
        }
    },
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ]
}
